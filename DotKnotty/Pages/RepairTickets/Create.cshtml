@page
@model DotKnotty.Pages.RepairTickets.CreateModel
@using DotKnotty.Models
@{
    ViewData["Title"] = "Create Repair Ticket";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RepairTicket.ShipConfigurationId" class="control-label">Ship Configuration</label>
                <select asp-for="RepairTicket.ShipConfigurationId" class="form-control" asp-items="ViewBag.ShipConfigurations">
                    <option value="">-- Select Ship Configuration --</option>
                </select>
                <span asp-validation-for="RepairTicket.ShipConfigurationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RepairTicket.Component" class="control-label">Component</label>
                <select asp-for="RepairTicket.Component" class="form-control">
                    <option value="">-- Select Component --</option>
                    <option value="Weapons">Weapons</option>
                    <option value="Shields">Shields</option>
                    <option value="Engines">Engines</option>
                    <option value="Hull">Hull</option>
                </select>
                <span asp-validation-for="RepairTicket.Component" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RepairTicket.Description" class="control-label"></label>
                <textarea asp-for="RepairTicket.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="RepairTicket.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}