@page
@model DotKnotty.Pages.RepairTickets.IndexModel
@{
    ViewData["Title"] = "Repair Tickets";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Ticket ID</th>
            <th>Ship Name</th>
            <th>Component</th>
            <th>Status</th>
            <th>Price</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RepairTickets)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ShipConfiguration?.ShipName</td>
                <td>@item.Component</td>
                <td>@item.Status</td>
                <td>@item.Price GalactiCredits</td>
                <td>@item.CreatedAt</td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>