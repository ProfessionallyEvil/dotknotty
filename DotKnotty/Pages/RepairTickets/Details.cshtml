        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RepairTicket.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RepairTicket.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RepairTicket.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RepairTicket.UserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RepairTicket.ShipConfiguration.ShipName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RepairTicket.ShipConfiguration.ShipName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RepairTicket.Component)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RepairTicket.Component)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RepairTicket.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RepairTicket.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RepairTicket.Status)
        </dt>
        <dd class="col-sm-10">
