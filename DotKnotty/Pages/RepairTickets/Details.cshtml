<h4>Update Description</h4>
<form method="post">
    <input type="hidden" asp-for="RepairTicket.Id" />
    <input type="hidden" asp-for="RepairTicket.Component" />
    <div class="form-group">
        <label asp-for="RepairTicket.Description" class="control-label"></label>
        <textarea asp-for="RepairTicket.Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="RepairTicket.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}