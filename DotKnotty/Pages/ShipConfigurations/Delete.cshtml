@page
@model DotKnotty.Pages.ShipConfigurations.DeleteModel
@{
    ViewData["Title"] = "Delete Ship Configuration";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this ship configuration?</h3>
<div>
    <h4>Ship Configuration</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShipConfiguration.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShipConfiguration.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShipConfiguration.ShipName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShipConfiguration.ShipName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShipConfiguration.WeaponsLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShipConfiguration.WeaponsLevel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShipConfiguration.ShieldLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShipConfiguration.ShieldLevel)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ShipConfiguration.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>